{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "allowCompilationErrors": true,
      "src": [
        {
          "src": "../src/Olve.Utilities",
          "files": [
            "**/Olve.Utilities.csproj"
          ]
        },
        {
          "src": "../src/Olve.Results",
          "files": [
            "**/Olve.Results.csproj"
          ]
        },
        {
          "src": "../src/Olve.Results.TUnit",
          "files": [
            "**/Olve.Results.TUnit.csproj"
          ]
        },
        {
          "src": "../src/Olve.Results.Validation",
          "files": [
            "**/Olve.Results.Validation.csproj"
          ]
        },
        {
          "src": "../src/Olve.Validation.SourceGeneration",
          "files": [
            "**/Olve.Validation.SourceGeneration.csproj"
          ]
        },
        {
          "src": "../src/Olve.Operations",
          "files": [
            "**/Olve.Operations.csproj"
          ]
        },
        {
          "src": "../src/Olve.Paths",
          "files": [
            "**/Olve.Paths.csproj"
          ]
        },
        {
          "src": "../src/Olve.Paths.Glob",
          "files": [
            "**/Olve.Paths.Glob.csproj"
          ]
        },
        {
          "src": "../src/Olve.Logging",
          "files": [
            "**/Olve.Logging.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      },
      {
        "src": "../",
        "files": [
          "src/**/README.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Olve.Utilities",
      "_appTitle": "Olve.Utilities",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
